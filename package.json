{
	"name": "hugo-site-holder",
  "pnpm": {
    "overrides": {
      "semver": "^7.5.4"
    }
  },
  "config": {
    "hugo": "0.120.4",
    "myIP": "192.168.0.70"
  },
  "scripts": {
    "clean": "rimraf public",
    "install:hugo": "hugo-installer --version config.hugo --extended",
    "hugo": "exec-bin bin/hugo/hugo",
    "hugoenv": "pnpm hugo env",
    "hugonew": "pnpm hugo new",
    "hugometrics": "pnpm hugo --templateMetrics --templateMetricsHints",
    "hugoversion": "pnpm hugo version",
    "devexec:hugo": "pnpm hugo server --port 3000 --bind=0.0.0.0 --baseURL=http://$npm_package_config_myIP:3000 --panicOnWarning --disableFastRender --forceSyncStatic --gc",
    "devexecdebug:hugo": "pnpm devexec:hugo --debug",
    "dev:hugo": "pnpm install:hugo && pnpm devexec:hugo",
    "devdebug:hugo": "pnpm install:hugo && pnpm devexecdebug:hugo",
    "prodexec:hugo": "exec-bin bin/hugo/hugo --minify --gc --logLevel info",
    "prod:hugo": "pnpm install:hugo && pnpm prodexec:hugo",
    "start": "NODE_ENV=development pnpm clean && pnpm dev:hugo",
    "start:debug": "NODE_ENV=development pnpm clean && pnpm devdebug:hugo",
    "build:prelim": "NODE_ENV=production pnpm clean && pnpm prod:hugo",
    "build": "NODE_ENV=production pnpm clean && pnpm prod:hugo",
    "deploy:wrangler": "wrangler pages deploy public --commit-dirty=true",
    "deploy": "pnpm build && pnpm deploy:wrangler",
    "testbuildexec:hugo": "pnpm devexec:hugo --minify --environment production",
    "testbuild": "pnpm clean && pnpm build:prelim && pnpm testbuildexec:hugo"
  },
  "devDependencies": {
    "exec-bin": "^1.0.0",
    "hugo-installer": "^4.0.1",
    "rimraf": "^5.0.5",
    "wrangler": "^3.17.1"
  }
}
